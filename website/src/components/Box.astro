---
export interface Props {
  class?: string;
  as?: keyof HTMLElementTagNameMap;
  shadow?: boolean;
  color?: "black" | "white" | "blue";
  [key: string]: any;
}

const {
  class: className = "",
  as: Tag = "div",
  shadow = false,
  color = "black",
  ...props
} = Astro.props;
---

<Tag
  class:list={[
    className,
    "relative",
    color === "black"
      ? "border-md"
      : color === "white"
        ? "white-border-md"
        : "blue-border-md",
  ]}
  {...props}
>
  {
    shadow && (
      <>
        <div class="absolute top-[5px] right-[-10px] h-full w-[10px] bg-black" />
        <div class="absolute bottom-[-10px] left-[5px] h-[10px] w-full bg-black" />
      </>
    )
  }

  <slot />
</Tag>
