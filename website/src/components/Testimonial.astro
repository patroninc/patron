---
import Box from "./Box.astro";
import KeystaticImage from "./KeystaticImage.astro";

const { testimonial } = Astro.props;
---

<Box class="w-full md:w-[400px]" shadow>
  <div class="bg-purple flex h-full flex-col items-center p-[25px]">
    <div class="mb-5 flex flex-col items-center gap-[10px]">
      {
        testimonial.image && (
          <Box>
            <KeystaticImage
              src={testimonial.image}
              alt={testimonial.author}
              class="size-10 object-cover"
            />
          </Box>
        )
      }
      <div>
        <p class="lg:text-h4 lg:leading-h4 text-h5 leading-h5 font-bold">
          {testimonial.author}
        </p>
      </div>
    </div>
    <p class="t-base">"{testimonial.quote}"</p>
  </div>
</Box>
