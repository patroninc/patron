{
  "name": "patron.com-website",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host --port 4330 --force",
    "check": "astro check",
    "build": "SKIP_KEYSTATIC=true astro build && yarn mv-html && yarn convert-to-markdown",
    "mv-html": "mkdir -p dist/html && find dist -type f -name '*.html' -not -path 'dist/html/*' -exec sh -c 'for f; do dest=\"dist/html/${f#dist/}\"; mkdir -p \"$(dirname \"$dest\")\"; mv -f \"$f\" \"$dest\"; done' sh {} +",
    "convert-to-markdown": "bash convert-to-markdown.sh",
    "preview": "SKIP_KEYSTATIC=true astro preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/mdx": "4.3.12",
    "@astrojs/react": "4.4.2",
    "@astrojs/rss": "4.0.14",
    "@astrojs/sitemap": "3.6.0",
    "@keystatic/astro": "5.0.6",
    "@keystatic/core": "0.5.48",
    "@lucide/astro": "0.555.0",
    "@tailwindcss/vite": "4.1.17",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "astro": "5.16.3",
    "astro-embed": "0.9.2",
    "astro-icon": "1.1.5",
    "markdown-it": "14.1.0",
    "marked": "17.0.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sanitize-html": "2.17.0",
    "tailwindcss": "4.1.17",
    "tiny-invariant": "1.3.3"
  },
  "devDependencies": {
    "@iconify-json/bi": "1.2.6",
    "@iconify-json/simple-icons": "1.2.60",
    "@iconify-json/tabler": "1.2.23",
    "@tailwindcss/typography": "0.5.19",
    "@types/markdown-it": "14.1.2",
    "@types/sanitize-html": "2.16.0",
    "@wcj/html-to-markdown-cli": "^2.1.1",
    "prettier": "3.7.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.1",
    "vite-plugin-devtools-json": "1.0.0",
    "wrangler": "4.51.0"
  },
  "packageManager": "yarn@4.9.4"
}
